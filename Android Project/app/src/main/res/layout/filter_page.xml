<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="#fff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/backButton_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/back_image"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="@string/coffee"
            android:textColor="@color/white"
            android:layout_marginStart="60dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/item_image"
            app:layout_constraintStart_toEndOf="@+id/backButton_image"
            app:layout_constraintEnd_toStartOf="@+id/searchButton_image" />
        <ImageView
            android:id="@+id/searchButton_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/search_image"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:src="@drawable/search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/filter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/myToolbar">

            <ImageView
                android:id="@+id/exit_filter"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon"
                android:contentDescription="@string/exit_image"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/filter_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/filter_by"
                android:textColor="#282a3a"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>

        <!-- RadioGroup with dynamically added RadioButtons -->
        <ImageView
            android:id="@+id/downImage_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_nameRadioGroup"
            app:layout_constraintEnd_toStartOf="@+id/title_nameRadioGroup"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/chevron_down__6_"
            android:contentDescription="@string/downImage_name" />

        <TextView
            android:id="@+id/title_nameRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:text="@string/name"
            android:textColor="#282934"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_layout" />

        <RadioGroup
            android:id="@+id/name_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_nameRadioGroup">

            <RadioButton
                android:id="@+id/radioButton1_nameRadioGroup"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:button="@null"
                android:textColor="#282934"
                android:background="@null"
                android:padding="3dp"
                android:drawableStart="@drawable/custom_radiobutton"
                android:drawablePadding="3dp"
                android:text="@string/ascending_order" />
            <RadioButton
                android:id="@+id/radioButton2_nameRadioGroup"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:button="@null"
                android:background="@null"
                android:padding="3dp"
                android:textColor="#282934"
                android:drawableStart="@drawable/custom_radiobutton"
                android:drawablePadding="3dp"
                android:text="@string/descending_order" />
        </RadioGroup>
        <ImageView
            android:id="@+id/downImage_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/title_brandRadioGroup"
            app:layout_constraintEnd_toStartOf="@+id/title_brandRadioGroup"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/chevron_down__6_"
            android:contentDescription="@string/downImage_name" />
        <TextView
            android:id="@+id/title_brandRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#282934"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/brand"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_radioGroup" />

        <RadioGroup
            android:id="@+id/brand_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_brandRadioGroup">

            <RadioButton
                android:id="@+id/radioButton1_brandRadioGroup"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#282934"
                android:button="@null"
                android:background="@null"
                android:padding="3dp"
                android:drawableStart="@drawable/custom_radiobutton2"
                android:drawablePadding="3dp"
                android:text="@string/nescafe" />
            <RadioButton
                android:id="@+id/radioButton2_brandRadioGroup"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:button="@null"
                android:textColor="#282934"
                android:background="@null"
                android:padding="3dp"
                android:drawableStart="@drawable/custom_radiobutton2"
                android:drawablePadding="3dp"
                android:text="@string/starbucks" />
            <RadioButton
                android:id="@+id/radioButton3_brandRadioGroup"
                android:minWidth="16dp"
                android:minHeight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:button="@null"
                android:textColor="#282934"
                android:background="@null"
                android:padding="3dp"
                android:drawableStart="@drawable/custom_radiobutton2"
                android:drawablePadding="3dp"
                android:text="@string/mccafe" />
            <RadioButton
                android:id="@+id/radioButton4_brandRadioGroup"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:button="@null"
                android:textColor="#282934"
                android:background="@null"
                android:padding="3dp"
                android:drawableStart="@drawable/custom_radiobutton2"
                android:drawablePadding="3dp"
                android:text="@string/khao" />
        </RadioGroup>
        <ImageView
            android:id="@+id/downImage_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/price_filter"
            app:layout_constraintEnd_toStartOf="@+id/price_filter"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/chevron_down__6_"
            android:contentDescription="@string/downImage_name" />
        <TextView
            android:id="@+id/price_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#282934"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/price_range"
            android:layout_marginStart="50dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brand_radioGroup" />

        <TextView
            android:id="@+id/from_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@string/from"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_filter"
            app:layout_constraintVertical_bias="0.096" />

        <EditText
            android:id="@+id/startPrice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/price_filter"
            android:textSize="14sp"
            android:hint="@string/min_price_filter"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2.5dp"
            android:paddingBottom="2.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/from_text"
            app:layout_constraintStart_toEndOf="@+id/from_text"
            app:layout_constraintTop_toTopOf="@+id/from_text"
            app:layout_constraintVertical_bias="0.466" />
        <TextView
            android:id="@+id/to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:text="@string/to"
            app:layout_constraintBottom_toBottomOf="@+id/startPrice_text"
            app:layout_constraintStart_toEndOf="@+id/startPrice_text"
            app:layout_constraintTop_toTopOf="@+id/startPrice_text"
            app:layout_constraintVertical_bias="0.466" />
        <EditText
            android:id="@+id/endPrice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/price_filter"
            android:textSize="14sp"
            android:hint="@string/max_price_filter"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2.5dp"
            android:paddingBottom="2.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/to_text"
            app:layout_constraintStart_toEndOf="@+id/to_text"
            app:layout_constraintTop_toTopOf="@+id/to_text"
            app:layout_constraintVertical_bias="0.466" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>