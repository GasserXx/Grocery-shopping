<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.umega.grocery.shopping.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/light_grey">
            <LinearLayout
                android:id="@+id/category_drop_menu"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/white"
                android:elevation="32dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_category"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:padding="15dp"/>
                <GridView
                    android:id="@+id/category_menu_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:background="@color/white"
                    android:horizontalSpacing="4dp"
                    android:verticalSpacing="4dp"
                    android:padding="4dp"/>
            </LinearLayout>
        <ImageButton
            android:id="@+id/categoriesButton"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/path_45"
            android:background="@color/transparent"
            android:contentDescription="@string/sample_category" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:paddingVertical="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/member_deals_title"
                android:fontFamily="@font/roboto"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingHorizontal="15dp"
                android:layout_alignParentStart="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    tools:ignore="RelativeOverlap,UseCompoundDrawables">                    >
                    <!--TODO Handle Clicks-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:fontFamily="@font/roboto"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@drawable/rounded_arrow"
                        android:paddingHorizontal="8dp"
                        android:layout_marginTop="2dp"
                        android:clickable="true"
                        android:onClick="@{()->viewModel.navigateToResultPage"
                        android:contentDescription="@string/rounded_arrow_description"
                        android:focusable="true" />
                </LinearLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/app_member_deals_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:paddingVertical="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grocery_app_deals"
                    android:fontFamily="@font/roboto"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingHorizontal="15dp"
                    android:layout_alignParentStart="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">                    >
                    <!--TODO Handle Clicks-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all"
                        android:fontFamily="@font/roboto"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@drawable/rounded_arrow"
                        android:paddingHorizontal="8dp"
                        android:layout_marginTop="2dp"
                        android:clickable="true"
                        android:onClick="@{()->viewModel.navigateToResultPage"
                        android:contentDescription="@string/rounded_arrow_description"
                        android:focusable="true" />
                </LinearLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/app_deals_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal"/>

        </LinearLayout>

    </LinearLayout>

</layout>